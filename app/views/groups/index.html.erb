<div class="col-md-10 col-md-offset-1">
  <div class="group">
    <%= link_to "New Group", new_group_path,class: "btn btn-primary btn-sm pull-right"%>
  </div>



  <table class="table table-hover ">
    <thead>
      <tr>
        <th class="col-md-2"> Title </th>
        <th class="col-md-6"> Description </th>
        <th class="col-md-2"> User </th>
        <th class="col-md-2"> Fuction </th>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
      <tr>
        <td><%= link_to(group.title, group_path(group)) %></td>
        <td><%= group.description %></td>
        <td><%= group.user.email %></td>
        <td>
          <%= link_to "Edit", edit_group_path(group), class: "btn btn-info btn-sm"%> |
          <%= link_to "Delete", group_path(group), method: :delete, class: "btn btn-warning btn-sm", data: {confirm:"are you sure?"}%>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>
