<div class="col-md-10 col-md-offset-1">
   <h1> 我加入的群组 </h1>
   <hr>
   <table class="table table-hover">
     <thead>
       <tr>
          <th> 标题 </th>
          <th> 内容 </th>
          <th> 评论数量 </th>
          <th> 更新时间 </th>
       </tr>
     </thead>
     <tbody>
       <% @groups.each do |group| %>
       <tr>
          <td><%= link_to(group.title, group_path(group)) %></td>
          <td><%= group.description %></td>
          <td><%= group.posts.count %></td>
          <td><%= group.updated_at %></td>
       </tr>
       <% end %>
     </tbody>
   </table>
</div>
