<div class="col-md-10 col-md-offset-1">

<h1 class="text-center">我的评论</h1>
<hr>
<table class="table table-hover">
   <thead>
      <tr>
         <th>话题</th>
         <th>评论</th>
         <th> 更新时间 </th>
         <th colspan="2"> </th>
      </tr>
   </thead>
   <tbody>
     <% @posts.each do |post| %>
     <tr>
       <td><%= post.group.title %></td>
       <td><%= post.content %></td>
       <td><%= post.updated_at %></td>
       <td><%= link_to "Edit", edit_group_post_path(post.group, post), class: "btn btn-xs btn-info"%></td>
       <td><%= link_to "Delete", group_post_path(post.group, post), method: :delete, data: { confirm: "你敢删？"}, class: "btn btn-xs btn-warning"%></td>
     </tr>
     <% end %>
   </tbody>


</table>

</div>
